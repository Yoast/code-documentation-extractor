{% include 'header.twig' %}

{% apply html_to_markdown %}
    <ul>
        <li>Class name: {{ name }}</li>
        <li>Namespace: {{ namespace }}</li>

        {% if isAbstract %}
            <li>This is an <strong>abstract</strong> class</li>
        {% endif %}
    </ul>

    {% if methods %}
        {% include 'methods.twig' with { 'methods': methods } %}
    {% endif %}

    {% if hooks.filters is not empty or hooks.actions is not empty %}
        {% include 'hooks.twig' with { 'hooks': hooks } %}
    {% endif %}

{% endapply %}

